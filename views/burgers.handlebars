<div class="row">
  <div class="col-4 text-center">
    <form>
      <div class="form-group">
        <h3>Add a Burger</h3>
        <input class="form-control" type="text" id="burger-input" placeholder="Create your burger here"/>
        <button class="btn btn-block btn-success" id="submit-btn">Add burger</button>
      </div>
    </form>
  </div>
  <div class="col-4">
    <h3>Burgers Available</h3>
    <ul class="list-group">
    {{#each burgerList}}
      {{#unless devoured}}
        <li class="list-group-item">
          {{burger}} 
          <button data-id="{{id}}" class="mark-complete btn btn-info">C</button>
          <button data-id="{{id}}" class="delete btn btn-danger"> X </button>
        </li>
      {{/unless}}
    {{/each}}
    </ul>
  </div>
  <div class="col-4">
    <h3>Burgers Devoured</h3>
    <ul class="list-group">
      {{#each burgerList}}
      {{#if devoured}}
      <li class="list-group-item">
        {{burger}}
        <button data-id="{{id}}" class="delete btn btn-danger"> X </button>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>